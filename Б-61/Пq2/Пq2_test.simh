;Тест программы Пq2
;Л.Ядренников 13.06.2023

;отключить печать статистики по командам
de PRINT_SYS_STAT 0

;включить трассировку (печать регистров после каждой команды)
de DEBUG_DUMP_REGS 1
de DEBUG_DUMP_MEM 1
;de ARITHMETIC_OP_DEBUG 1
! del pq2_debug.txt
set console debug=pq2_debug.txt
set cpu debug
set lpt debug

;файл вывода результатов
! del out.prn
att lpt out.prn

;обращение к Пq2 для вывода слов с адресами 1000..1014 
;(слова содержатся в файле numbers.m20) 
de 2000 016200277520007
de 2001 000100000002003
de 2002 777777777777777

;ячейка, в которой закодировано кол-во слов
de 2003 000000000000015

;загрузка чисел
load ../Пq1/numbers.m20

;загрузка программы Пq1
load Пq2.m20

;запуск Пq2
run 2000

;проверка правильности работы, если n=1
de 2003 000101000000001
run 2000

;выход
exit
